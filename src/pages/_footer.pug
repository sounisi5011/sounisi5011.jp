- modified = modified || new Date
footer.page
  p.page-location
    if qrCodeImageFiles
      -
        const svgImage = qrCodeImageFiles.svg;
        const pngImage = qrCodeImageFiles.png;
      if svgImage && pngImage
        picture.qr-code
          source(srcset=`/${path2url(svgImage.path)}` type="image/svg+xml")
          img(src=`/${path2url(pngImage.path)}`
              width=pngImage.width
              height=pngImage.height
              alt="")
      else if svgImage || pngImage
        - const image = svgImage || pngImage;
        img.qr-code(src=`/${path2url(image.path)}`
                    width=image.width
                    height=image.height
                    alt="")
    span.url
      each urlItem, index in yahooStyleURLBreaker(canonicalURL(rootURL, path))
        if index !== 0
          wbr
        span.bunsetsu= urlItem
  p
    | 最終更新日：
    time(datetime=formatDate(modified, '%Y-%m-%dT%H:%M:%SZ', 0)
         itemprop="dateModified")
      = formatDate(modified, '%Y年%-m月%-d日 %H:%M:%S JST', 9 * 60*60)
  p.copyright
    small(lang="en")
      | Copyright ©
      |
      if published
        time(datetime=formatDate(published, '%Y-%m-%dT%H:%M:%SZ', 0)
             itemprop="datePublished")
          = formatDate(published, '%Y')
      if published && modified
        | -
      if modified
        time(datetime=formatDate(modified, '%Y-%m-%dT%H:%M:%SZ', 0)
             itemprop="dateModified")
          = formatDate(modified, '%Y')
      |
      |
      span(itemprop="author") sounisi5011
      |
      | Some Rights Reserved.
  p.license
    a(rel="license" href="https://creativecommons.org/licenses/by-sa/4.0/deed.ja" hreflang="ja")
      picture
        source(srcset="/images/creativecommons.by-sa.svg" type="image/svg+xml")
        img(src="/images/creativecommons.by-sa.png"
            alt="クリエイティブ・コモンズ 表示 - 継承 4.0 国際ライセンス"
            width="88" height="31")
